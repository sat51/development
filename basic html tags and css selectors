            space */
            .common p{
                color: blueviolet; 
            }


            /* > immediate selector */
            .common > p{
                background-color: coral;
            }

            /* + sibling  */
            .common + div{
                color: red;
            } 

            /* general selector */
            .common ~ div{
                background-color: lightgreen;
            }

            /* attribute selector */


            lable[for]{
                color: chocolate;
            }
            label[for="name"]
            {
                background-color: cornflowerblue;
            }
            input[type]
            {
                background-color: forestgreen;
            }
            
